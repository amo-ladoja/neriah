# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google OAuth Configuration
# Create OAuth credentials: https://console.cloud.google.com/apis/credentials
# Required scopes: gmail.readonly, gmail.metadata, userinfo.email, userinfo.profile
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Anthropic Claude API
# Get your API key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Extraction Service (Cloud Run)
# URL of your extraction service deployment
EXTRACTION_SERVICE_URL=your_cloud_run_service_url
EXTRACTION_SERVICE_SECRET=your_extraction_service_secret_key

# Cron Job Secret (for Vercel Cron)
# Generate a random secret for webhook authentication
CRON_SECRET=your_random_secret_for_cron_webhook

# Optional: Google Calendar API (for meeting scheduling)
# Same OAuth credentials as above, just ensure calendar scope is enabled
GOOGLE_CALENDAR_ENABLED=false

# Web Push VAPID Keys
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
